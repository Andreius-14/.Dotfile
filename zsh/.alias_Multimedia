spotdl_playlist() {

  if [[ -z "$1" ]]; then
    echo "Ingrese la URL de la Playlist"
    return 1
  fi

  local url=$1

  local formato="mp3"

  local file="predeterminado.spotdl"

  local ruta="{list-name}/{artist} - {title}.{output-ext}"


    PS3="Selecciona formato [1-2]: "
    local options=("mp3 - Compatibilidad Total" "opus - Ligero Moderno Calidad")

    select opt in "${options[@]}"; do
        case $REPLY in
            1) 
                spotdl sync "$url" --save-file "$file" --output "$ruta"

                break 
                ;;
            2) 
                spotdl sync "$url" --format opus --bitrate "disable" --save-file "$file" --output "$ruta"

                break 
                ;;
            *) 
                echo "Opción incorrecta, elija de nuevo." 
                ;;
        esac
    done


  local name=$(ls -dt * | head -n 1)

  mv "$file" "$name/Playlist_$name.spotdl"  # Renombro y Muevo

}

spotdl_pull(){
  
  local formato=$(ls | grep -Eo "(opus|mp3|m4a|ogg)$"  | head -n 1 )

  find . -name "*.spotdl" -print0 | while IFS= read -r -d $'\0' file; do
    spotdl  --format "${formato}" sync "$file" --overwrite skip
  done 
}

spotdlD(){
  if [[ -z "$1" ]]; then
    echo "Ingrese la URL de la Playlist"
    return 1
  fi

  spotdl  "$1" --format opus
}
