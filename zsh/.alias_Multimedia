#══════════════════════ 
#         mpv
#══════════════════════
alias mpv_radio='mpv --no-video'
alias mpv_playlist='mpv --shuffle --loop-playlist=inf --geometry=15%-20-20'
alias mpv_media='mpv --geometry=25%-20+20'

mpv_media_pl() {
  local url="$1"
  local start="${2:-1}"
  mpv_media --save-position-on-quit --playlist-start="$start" "$url"
}

