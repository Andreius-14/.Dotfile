# [MUSICA]
sync_Android-Spotify-Playlist(){

    # Rutas
    local ruta_Laptop="/run/media/carlosa/Disco/📁 Musica/Spotify"
    local ruta_Android="~/storage/music/Spotify_Playlist/"
    
    # Ejecucion
    rsync -avz -e "ssh" "Android:$ruta_Android" "$ruta_Laptop"  
}

