#=============================
#  GREP SED
#=============================
# --> Derecha   ^[[m   --> (.\[+m)
# --> Izquierda ^[[25m -->  (.\[+[0-9;]+m)
# --> izquierda y Derecha .... (.\[+[0-9;]*m)

#=============================
#  Git Log - Git Show - Git diff
#=============================
# ↳name:  [%an] %aN 
# ↳email: [%ae] [%aE] [%al] 
# ↳fecha: [%as] [%ar] [%ai] [%aD] [%ad] [%at]
# ↳commit:%s %f %b %B "


#=============================
#  GIT
#=============================

alias gcl='git clone --depth 1'
alias gi='git init'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push origin master'

#Variables
_hash="%h" ; _autor="%an"; _email="%ae"; _time="%ar"; _timel="%aD"; _date="%as" ;   _msm="%s"  ; _branch="%d";
_gla="%C(bold blue)$_hash%C(reset) - %C(cyan)[$_date]%C(reset) %C(bold 42)[$_time]%C(reset) %C(229)[$_timel]%C(reset)%C(bold)$_branch%C(reset)  %n''          %C(dim white)$_autor - $_email%C(reset)%n''          %C(bold 141)Mensaje: \"$_msm\"%C(reset)%n"
_glm="%C(bold blue)$_hash%C(reset) - %C(cyan)[$_date]%C(reset) %C(bold 42)$_autor:%C(reset) %C(229)$_msm%C(reset) %C(bold)$_branch%C(reset)%n"
_glmm="%C(bold cyan)$_hash%C(reset) %C(42)[$_time]%C(reset)%C(white)$_branch%C(reset)"

#=============================
#  Git - (Log, Show, Diff)
#=============================

#Base
alias atom_log="git log --graph --abbrev-commit --decorate --color=always" #--all
alias atom_diff="git diff --patch-with-stat  --color=always --no-prefix"
alias atom_show="git show --patch-with-stat  --color=always --no-prefix" #--color-words 

#Log
alias glm="atom_log --pretty=format:'$_glm' "
alias gla="atom_log --pretty=format:'$_gla' "
alias glmm="atom_log --pretty=format:'$_glmm' "
#Show
alias gsm="atom_show --pretty=format:'$_glm' "
alias gsa="atom_show --pretty=format:'$_gla' "
#Diff
alias gd="atom_diff "

#Nice
glmn() {  glm  "$@" | git_nice }
glan() {  glan "$@" | git_nice }
glmmn(){  glmm "$@" | git_nice }
#Nice
gsmn() {  gsm  "$@" | git_nice }
gsan() {  gsa  "$@" | git_nice }
#Nice
gdn() {  gd  "$@"  | git_nice }

git_nice(){
    #Graph
    sed -e 's/^\*//' -Ee 's/(\|.\[+m )\* /\1 /' -e 's/(^.*)/ \1/' | \
    #Reemplazar
    sed -E 's/(.\[+[0-9;]+m)\|(.\[+m)/\1\⎟\2/g'   | \
    sed -E 's/(.\[+[0-9;]+m)\/(.\[+m)/\1\⟋\2/g'   | \
    sed -E 's/(.\[+[0-9;]+m)\\(.\[+m)/\1\⟍\2/g'   | \
    #MetaDatos
    grep -Ev '(^| )(.\[+[0-9;]+m)*(\+\+\+ |--- |index )' | \
    sed -E 's/(^| )(.\[+[0-9;]*m)*(diff --git)( .*)/ \x1b[36m┏━━(\3) [\4]\x1b[0m/' | \
    sed -E 's/(^| )(.\[+[0-9;]*m)*@@ (.*) @@(.\[+m)*/ \2┗━━[ \3 ]\4/'
}


#=======================================================================================
#  GIT FUNCTION
#=======================================================================================


#====================
#  Atomo
#====================
function g_GeneraCommit(){
    git add . && git commit -m "$1"
}

function g_inicio (){
  git init -b main
}


#=============================
#  Git submodule
#=============================
function g_submodule-Download(){
    git submodule init
    git submodule update

}

function g_submodule-Pull(){
    git pull --recurse-submodules
}


#====================
#  Molecula
#====================

function github() {
    g_GeneraCommit "$1" && git push
}



#====================
#  Celulas
#====================

function g_EnlaceRemoto(){

  [[ -z "$1" ]] && { echo "No se ha ingresado URL"; return 1; }

  echo -e "\e[32m[Inicializando Git]\e[0m"
  [[ ! -d .git ]] && {g_inicio}

  #Enlace Remoto
  echo -e "\e[32m[Agregando Enlace Remoto]\e[0m"
  git remote add origin "$1" 2>/dev/null || git remote set-url origin "$1"

  # Verificar Cambios
    if ! git pull origin main 2>/dev/null; then
        
        echo -e "\e[32m[Pasos de Rebase]\e[0m"

        read -p "¿Desea intentar con rebase? (s/n): " respuesta
        if [[ "$respuesta" =~ ^[Ss]$ ]]; then
            git pull origin main --rebase || {
                echo "Error: No se pudo realizar el rebase."
                return 1
            }
        else
            echo "Advertencia: No se sincronizó con el remoto."
        fi
    fi

  echo -e "\e[32m[Generando Commit]\e[0m"

  g_GeneraCommit "Enlace Remoto a Github"

  # Remoto 
  echo -e "\e[32m[Enviando Cambios]\e[0m"
  git push origin main || echo "Enpuje Fallido"
}

